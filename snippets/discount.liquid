<script>
  if (window.innerWidth < 769) {
    var _popup = document.querySelector('.mrk-coupons-box');
    var _popup_overlay = document.querySelector('.mrk-page-modal');

    document.querySelector('.mrk-coupons-box').remove();
    document.querySelector('.mrk-page-modal').remove();

    document.body.append(_popup);
    document.body.append(_popup_overlay);

  }
  document.querySelector('.mrk-more').addEventListener('click', showCouponsBox);
  // document.querySelector('.mrk-more-icon').addEventListener('click', showCouponsBox);
  function showCouponsBox() {
    document.querySelector('.mrk-coupons-box').classList.add('mrk-active');
    document.querySelector('.mrk-page-modal').classList.add('mrk-active');
  }
  function hideCouponsBox() {
    document.querySelector('.mrk-coupons-box').classList.remove('mrk-active');
    document.querySelector('.mrk-page-modal').classList.remove('mrk-active');
  }
  document.querySelector('.icon-cm-cancel-1-copy').addEventListener('click', hideCouponsBox);
  document.querySelector('.mrk-page-modal').addEventListener('click', hideCouponsBox);



</script>
<style>
  /* Bulk Coupon Styles */
  .mrk-bulkcoupon {
    margin-top: 20px;
    text-align: left;
    width: 100%;
  }

  .mrk-bulkcoupon--margin__0 {
    margin-top: 0 !important;
  }

  .mrk-bulkcoupon h4 {
    color: #2f2f2f;
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
    margin-bottom: 20px;
  }

  /* Discount Tag Styles */
  .mrk-discount-tag {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 5px;
  }

  .mrk-tag-item {
    background: rgba(232, 11, 43, 0.05);
    color: #e80b2b;
    border: 1px solid #e80b2b;
    padding: 0 10px;
    font-size: 14px;
    line-height: 28px;
    text-align: center;
    position: relative;
    cursor: pointer;
  }

  .mrk-tag-item:before,
  .mrk-tag-item:after {
    background-color: #fff;
    border-color: #0000 #0000 #e80b2b #e80b2b;
    border-radius: 50%;
    border-style: solid;
    border-width: 1px;
    content: "";
    height: 9px;
    margin-top: -5px;
    position: absolute;
    top: 50%;
    width: 9px;
  }

  .mrk-tag-item:before {
