    }

    .mrk-more-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5px;
    }
  }

  /* Keyframes for Animation */
  @keyframes mrk-slide-top {
    from {
      transform: translateY(100%);
    }

    to {
      transform: translateY(0);
    }
  }
</style>
