  }


  /* Media Queries for Responsive Design */
  @media screen and (max-width: 767px) {

    /* Page Modal */
    .mrk-page-modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(54, 54, 54, 0.5);
      z-index: 999;
      visibility: hidden;
      opacity: 0;
      transition: visibility 0.3s, opacity 0.3s;
    }

    .mrk-page-modal.mrk-active {
